<% if @booking.errors.any? %>
  <% @booking.errors.full_messages.each do |error| %>
    alert("<%= error %>" );
  <% end %>
<% else %>
  $('.add_booking_link').show();
  $('#new_booking').html("");
  $('.teacher_calendar').fullCalendar('refetchEvents');
  $('#fullCalModal_<%= @booking.timeslot_id %>').modal('hide')
<% end %>