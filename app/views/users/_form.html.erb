<%= form_for @user, html: {class: 'form-horizontal'} do |f| %>

<div class="row">
	<div class="col-sm-8 col-sm-offset-2">

		<div class="form-group">
				<%= f.label :first_name, class: 'col-sm-2 control-label' %>
				<div class="col-sm-10">
					<%= f.text_field :first_name, class: 'form-control', placeholder: 'First Name'  %>
				</div>
		</div>

		<div class="form-group">
			<%= f.label :last_name, class: 'col-sm-2 control-label' %>
			<div class="col-sm-10">
				<%= f.text_field :last_name, class: 'form-control', placeholder: 'Last Name'  %>
			</div>
		</div>

		<div class="form-group">
			<%= f.label :email, class: 'col-sm-2 control-label' %>
			<div class="col-sm-10">
				<%= f.text_field :email, class: 'form-control', placeholder: "Email"  %>
			</div>
		</div>

		<div class="form-group">
			<%= f.label :city_time_zone, "Time zone", class: 'col-sm-2 control-label' %>
			<div class="col-sm-10">
				<%= f.time_zone_select :city_time_zone,  nil, {prompt: "Select Your Timezone"}, {:class => 'form-control'} %>
				<span class="help-block">Please choose considerately. This is important for us to display bookings and availability in your local time.</span>
			</div>
		</div>	

		<div class="form-group">
			<%= f.label :password, class: 'col-sm-2 control-label' %>
			<div class="col-sm-10">
				<%= f.password_field :password, class: 'form-control', placeholder: "Password"  %>
			</div>
		</div>  

		<div class="form-group">
			<%= f.label :password_confirmation, class: 'col-xs-2 control-label' %>
			<div class="col-sm-10">
				<%= f.password_field :password_confirmation, class: 'form-control', placeholder: "Password Confirmation" %>
				<span class="help-block">Password must be at least 6 characters long and is case sensitive.</span>
			</div>
		</div>
	 <% if current_user != nil %>
		<div class="form-group">
			<div class="col-sm-offset-2 col-xs-12 col-sm-6">
			<button type="submit" name="commit" class="btn btn-lg btn-primary btn-block">Save Update</button>
			</div>
		</div>  
		<% else %>
		 <div class="form-group">
			<div class="col-sm-offset-2 col-xs-12 col-sm-6">
			<button type="submit" name="commit" class="btn btn-lg btn-primary btn-block">Sign Up</button>
			</div>
		</div>  
		<% end %>
	</div>
</div>
<% end %>
